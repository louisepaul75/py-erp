# Django
DJANGO_SETTINGS_MODULE=pyerp.settings.development
DJANGO_DEBUG=True
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database - Either use DATABASE_URL format
DATABASE_URL=mysql://user:password@host:3306/database_name

# Or use individual database variables (preferred)
DB_ENGINE=django.db.backends.mysql
DB_NAME=pyerp_testing
DB_USER=db_username
DB_PASSWORD=db_password
DB_HOST=db_host_address
DB_PORT=3306

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=
DEFAULT_FROM_EMAIL=

# AWS S3 (Optional, for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=

# Superuser creation (for Docker)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=secure_password

# Static files
DJANGO_COLLECT_STATIC=0

# Legacy 4D ERP Connection
LEGACY_ERP_HOST=
LEGACY_ERP_PORT=
LEGACY_ERP_USER=
LEGACY_ERP_PASSWORD=

# Logging
LOG_LEVEL=DEBUG
JSON_LOGGING=True
LOG_FILE_SIZE_LIMIT=2097152  # 2MB in bytes 