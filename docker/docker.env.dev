# Essential environment variables for Docker
DJANGO_SETTINGS_MODULE=pyerp.settings.development
DEBUG=True
SECRET_KEY=dev_secret_key_replace_in_production

# MySQL Database Configuration (configure with your actual credentials before use)
DATABASE_URL=mysql://user:password@your.mysql.host:3306/your_database
# Fallback database settings if DATABASE_URL parsing fails
DB_ENGINE=django.db.backends.postgresql
DB_NAME=pyerp_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

ALLOWED_HOSTS=localhost,127.0.0.1
REDIS_URL=redis://redis:6379/0

# Celery configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email settings (development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25

# Static and media files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/static
MEDIA_ROOT=/app/media

# Development-specific settings
PYTHONPATH=/app
DJANGO_DEBUG=True 