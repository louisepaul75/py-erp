# Essential environment variables for Docker
DJANGO_SETTINGS_MODULE=pyerp.settings.development
DEBUG=True
SECRET_KEY=dev_secret_key_replace_in_production

# PostgreSQL Database Configuration (external database)
# These values will be overridden by environment variables if set
DB_ENGINE=django.db.backends.postgresql
DB_NAME=pyerp_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

ALLOWED_HOSTS=localhost,127.0.0.1

# Redis configuration (local to container)
REDIS_URL=redis://localhost:6379/0

# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email settings (development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25

# Static and media files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/static
MEDIA_ROOT=/app/media

# Development-specific settings
PYTHONPATH=/app
DJANGO_DEBUG=True 