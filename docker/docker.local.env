# Local environment variables for Docker
DJANGO_SETTINGS_MODULE=pyerp.settings.production
DEBUG=True
SECRET_KEY=local_dev_key_not_for_production
# Using SQLite for local development without a database server
DATABASE_URL=sqlite:///app/db.sqlite3
# Alternative MySQL configuration (uncomment to use)
# DATABASE_URL=mysql://pyerp:pyerp@db:3306/pyerp
# Note: Using PyMySQL as the MySQL adapter (pure Python implementation)
ALLOWED_HOSTS=localhost,127.0.0.1,*
# No Redis for local testing
REDIS_URL=memory://
CELERY_BROKER_URL=memory://
CELERY_RESULT_BACKEND=memory:// 