# Local environment variables for Docker
DJANGO_SETTINGS_MODULE=pyerp.settings.local
DEBUG=True
SECRET_KEY=local_dev_key_not_for_production

# Using SQLite for local development without a database server
DATABASE_URL=sqlite:///app/db.sqlite3
# Explicitly set the database engine to avoid MySQL import
DB_ENGINE=django.db.backends.sqlite3

# All MySQL settings are removed to prevent Django from trying to import MySQL modules
# when parsing settings

# List of hosts allowed to connect
ALLOWED_HOSTS=localhost,127.0.0.1,*

# No Redis for local testing
REDIS_URL=memory://
CELERY_BROKER_URL=memory://
CELERY_RESULT_BACKEND=memory:// 