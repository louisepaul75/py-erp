# Example Docker environment file - copy to docker.env.dev and fill in your details
# DO NOT commit docker.env.dev with real credentials to version control!

DJANGO_SETTINGS_MODULE=pyerp.settings.development
DEBUG=True
SECRET_KEY=replace_this_with_a_secure_random_key

# PostgreSQL Database Configuration (external database)
# These values will be overridden by environment variables if set
DB_ENGINE=django.db.backends.postgresql
DB_NAME=pyerp_dev
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

ALLOWED_HOSTS=localhost,127.0.0.1

# Redis configuration (local to container)
REDIS_URL=redis://localhost:6379/0

# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email settings (development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25

# Static and media files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/static
MEDIA_ROOT=/app/media

# Development-specific settings
PYTHONPATH=/app
DJANGO_DEBUG=True

# Legacy 4D ERP Connection (if needed)
LEGACY_ERP_HOST=
LEGACY_ERP_PORT=
LEGACY_ERP_USER=
LEGACY_ERP_PASSWORD=

# API Environment URLs (if needed)
LEGACY_ERP_API_TEST=http://192.168.73.26:8090
LEGACY_ERP_API_LIVE=http://192.168.73.28:8080
# API Authentication for Legacy ERP API
LEGACY_API_USERNAME=your_api_username
LEGACY_API_PASSWORD=your_api_password 