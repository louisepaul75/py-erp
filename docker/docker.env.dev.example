# Example Docker environment file - copy to docker.env and fill in your details
# DO NOT commit docker.env with real credentials to version control!

DJANGO_SETTINGS_MODULE=pyerp.settings.production
DEBUG=False
SECRET_KEY=replace_this_with_a_secure_random_key

# PostgreSQL Database Configuration 
DATABASE_URL=postgresql://postgres:password@postgres:5432/your_database
# Fallback database settings if DATABASE_URL parsing fails
DB_ENGINE=django.db.backends.postgresql
DB_NAME=your_database
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=postgres
DB_PORT=5432

ALLOWED_HOSTS=localhost,127.0.0.1,*
REDIS_URL=redis://redis:6379/0

# Celery configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Legacy 4D ERP Connection
LEGACY_ERP_HOST=
LEGACY_ERP_PORT=
LEGACY_ERP_USER=
LEGACY_ERP_PASSWORD=

# API Environment URLs
LEGACY_ERP_API_TEST=http://192.168.73.26:8090
LEGACY_ERP_API_LIVE=http://192.168.73.28:8080
# API Authentication for Legacy ERP API
LEGACY_API_USERNAME=your_api_username
LEGACY_API_PASSWORD=your_api_password 